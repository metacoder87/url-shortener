#!/usr/bin/env ruby
class CLI
    def proper_email?
        return true if @email.include?('@') && @email.include?('.')
        return false
    end

    def user_exists?
        @user = User.find_by(email: @email)
        return true if @user
        return false
    end

    def register_user
        @user = User.new(email: @email)
        @user.save!
    end
